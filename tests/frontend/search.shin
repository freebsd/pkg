#! /usr/bin/env atf-sh

atf_test_case search
search_head() {
	atf_set "descr" "testing pkg search"
}

search_body() {
	export REPOS_DIR=/nonexistent
	export PKG_DBDIR=.
	export INSTALL_AS_USER=yes
	atf_check -e inline:"No valid repository found.\n" -o empty -s exit:3 pkg -C '' -R '' search -e -Q comment -S name pkg
}

atf_init_test_cases() {
        . $(atf_get_srcdir)/test_environment.sh

	unset PKG_DBDIR

	atf_add_test_case search
}
